<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/alterDialogReq_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/req" />

    <TextView
        android:id="@+id/alterDialogReq_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alterDialogReq_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Name"
        android:textColor="@color/Blue400"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/alterDialogReq_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alterDialogReq_name"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@+id/alterDialogReq_name"
        android:text="Clinic"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/alterDialogReq_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alterDialogReq_type"
        android:layout_below="@+id/alterDialogReq_type"
        android:layout_marginTop="15dp"
        android:text="Gender"
        android:textColor="#000"
        android:textSize="18sp" />

</RelativeLayout>