<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.usman.virtualclinic.ClinicMainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/logonew" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Virtual"
            android:textColor="@color/newcolor"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView40"
            android:layout_alignBottom="@+id/textView40"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView40"
            android:text="Clinic"
            android:textColor="@color/GRAY800"
            android:textSize="25sp" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:fadeScrollbars="true"
        android:textAlignment="center"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/GRAY700"
        app:tabMaxWidth="150dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TextAppearance.AppCompat"
        app:tabTextColor="@color/Blue600">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pager"
        android:background="#fff">

    </android.support.v4.view.ViewPager>


</LinearLayout>
