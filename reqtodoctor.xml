<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/llreqToDoc_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/llReq_to_Doc_pic"
        android:text="Patient Name"
        android:textColor="@color/LIGHTBLUE500"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/llreq_to_Doc_Problem_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/llreqToDoc_patient_name"
        android:layout_below="@+id/llreqToDoc_patient_name"
        android:background="@drawable/edittextgen2"
        android:text="Problem Descrption"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/llReq_to_Doc_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/llreq_to_Doc_Problem_Description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/doc" />

</RelativeLayout>