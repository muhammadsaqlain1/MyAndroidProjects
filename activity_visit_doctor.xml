<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.usman.virtualclinic.VisitDoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#42b0e1"
        android:id="@+id/relativeLayout">


        <TextView
            android:id="@+id/textView93"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imageButtonbackarrow"
            android:layout_toRightOf="@+id/imageButtonbackarrow"
            android:text="Visit Doctor"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonbackarrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#42b0e1"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <TextView
            android:id="@+id/visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/visit_DocName"
            android:layout_marginBottom="21dp"
            android:text="Doctor"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/visit_DocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19dp"
            android:text="Name"
            android:textColor="@color/LIGHTBLUE500"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/visit_Doctor_Pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            app:srcCompat="@drawable/ic_perm_identity_black_24dp"
            android:visibility="gone"/>

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Patient: "
            android:textColor="#000"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/visit_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Patient Name: "
        android:textColor="#000"
        android:textSize="20sp" />


</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="30dp"


                android:layout_weight="1"
                android:text="Temprature"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:layout_weight="1"
                android:text="Sugar Level"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/ettemperature"
                android:layout_width="120dp"
                android:layout_height="30dp"


                android:layout_weight="1"

                android:background="@drawable/edittextgen2"

                android:hint="Farenhight"
                android:textSize="18sp"
                android:layout_margin="5dp"/>


            <EditText
                android:id="@+id/etsugarlevel"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:background="@drawable/edittextgen2"
                android:ems="10"
                android:hint="mmol"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_margin="5dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:layout_margin="5dp"

                android:layout_weight="1"
                android:text="Pulse"
                android:textColor="#000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:layout_weight="1"
                android:text="Weight"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etpulse"
                android:layout_width="110dp"
                android:layout_height="30dp"

                android:layout_margin="5dp"
                android:background="@drawable/edittextgen2"
                android:ems="10"
                android:hint="bpm"
                android:inputType="textPersonName"
                android:layout_weight="1"/>


            <EditText
                android:id="@+id/etweight"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittextgen2"
                android:ems="10"
                android:hint="Kg"
                android:inputType="textPersonName" />


        </LinearLayout>






        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:layout_margin="5dp"
            android:text="Blood Pressure"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/etstolic"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"


            android:background="@drawable/edittextgen2"
            android:ems="10"
            android:hint="Stolic"
            android:layout_weight="1"
            android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etdistolic"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittextgen2"
                android:ems="10"

                android:hint="Distolic"
                android:inputType="textPersonName" />

        </LinearLayout>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Breath Rate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/etbreathrate"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittextgen2"
            android:ems="10"

            android:layout_marginLeft="5dp"
            android:layout_gravity="left"
            android:hint="Distolic"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Problem Description"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etprobdescription"
            android:layout_width="fill_parent"
            android:layout_height="30dp"

            android:layout_marginTop="9dp"
            android:background="@drawable/edittextgen2"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Attach Picture"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_for_problrmpicture"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/attach" />

        <Button
            android:id="@+id/btnsubmit_request_to_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/btngen2"
            android:text="Submit" />


    </LinearLayout>

</ScrollView>
</LinearLayout>

