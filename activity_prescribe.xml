<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.usman.virtualclinic.PrescribeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#42b0e1"
        android:id="@+id/relativeLayout2">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imageButtonbackarrow"
            android:layout_toRightOf="@+id/imageButtonbackarrow"
            android:text="Prescription"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonbackarrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#42b0e1"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:id="@+id/relativeLayout3">


        <EditText
            android:id="@+id/prescribtion_diagnosed"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/genedittext"
            android:hint="Diagnosed"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/prescribtion_diagnosed"
            android:layout_marginTop="16dp"
            android:text="Diagnosed"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_alignStart="@+id/textView20"
            android:text="Medicine"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Prescription_medicine"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/prescribtion_diagnosed"
            android:layout_below="@+id/textView18"
            android:layout_marginTop="7dp"
            android:background="@drawable/genedittext"
            android:hint="Medicine"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/prescribtion_diagnosed"
            android:layout_below="@+id/prescribtion_diagnosed"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="12dp"
            android:text="Medicine Type"
            android:textColor="#000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/Prescription_sp_med_type"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/textView19"
            android:layout_alignTop="@+id/Prescription_medicine"
            android:background="@drawable/genedittext" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Prescription_medicine"
            android:layout_below="@+id/Prescription_medicine"
            android:layout_marginTop="9dp"
            android:text="Dose"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/Presciption_advice"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/edittextgen2"
        android:hint="Advisce" />

    <Button
        android:id="@+id/prescription_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Presciption_advice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/btngen2"
        android:text="Send"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Presciption_advice"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginTop="13dp"
        android:text=" Prescription / Advice"
        android:textColor="#000"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/prescription_dose_mrng"
                android:layout_width="100dp"
                android:layout_height="40dp"


                android:background="@drawable/edittextgen2"
                android:hint="Morning"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/prescription_dose_eve"
                android:layout_width="100dp"
                android:layout_height="40dp"

                android:layout_marginStart="10dp"
                android:background="@drawable/edittextgen2"
                android:hint="Evening"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/prescription_dose_night"
                android:layout_width="100dp"
                android:layout_height="40dp"

                android:layout_marginStart="10dp"

                android:background="@drawable/edittextgen2"
                android:hint="Night"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>