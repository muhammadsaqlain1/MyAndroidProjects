<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/Spec_Doc_Docimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/doc"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/spec_Doc_Docname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Spec_Doc_Docimage"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/Spec_Doc_Docimage"
        android:text="TextView"
        android:textColor="@color/LIGHTBLUE500"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spec_Doc_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spec_Doc_Docname"
        android:layout_below="@+id/spec_Doc_Docname"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000"/>

</RelativeLayout>