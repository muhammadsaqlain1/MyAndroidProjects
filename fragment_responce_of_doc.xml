<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usman.virtualclinic.ResponceOfDocFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/textView29"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="14dp"
           android:text="Responces From Doctor"
           android:textColor="#000"
           android:textSize="20sp" />

       <ListView
           android:id="@+id/list_responce_from_Doc"
           android:layout_width="match_parent"
           android:layout_height="fill_parent"
           android:layout_alignParentStart="true"
           android:layout_below="@+id/textView29"
           android:layout_marginTop="43dp"></ListView>

       <EditText
           android:id="@+id/editText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView29"
           android:layout_centerHorizontal="true"
           android:background="@drawable/edittextgen2"
           android:ems="10"
           android:hint="Search responce by patient or Doctor name"
           android:inputType="textPersonName"
           android:textColor="#000"
           android:textSize="16sp" />


   </RelativeLayout>

</FrameLayout>
